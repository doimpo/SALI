---
import BaseLayout from '../../layouts/BaseLayout.astro';

// In production, this would fetch from a CMS or markdown files
// For now, we'll use static generation with sample content
export function getStaticPaths() {
  return [
    { params: { slug: 'understanding-fatty-liver-disease' } },
    { params: { slug: 'life-after-liver-transplant' } },
    { params: { slug: 'managing-liver-cirrhosis' } },
    { params: { slug: 'liver-cancer-early-detection' } },
    { params: { slug: 'hepatitis-prevention-guide' } },
    { params: { slug: 'nutrition-for-liver-health' } },
  ];
}

const { slug } = Astro.params;

// Sample blog post data (in production, fetch from CMS)
const blogPosts = {
  'understanding-fatty-liver-disease': {
    title: "Understanding Fatty Liver Disease: Prevention and Management",
