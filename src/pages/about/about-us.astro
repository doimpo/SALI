---
import BaseLayout from '../../layouts/BaseLayout.astro';
---
<BaseLayout title="About SALi">
    <!-- ==========================
        Page Title
    =========================== -->
    <section class="page-title page-title-layout1 bg-overlay bg-parallax">
      <div class="bg-img"><img src="/assets/images/page-titles/1.jpg" alt="background"></div>
      <div class="container">
        <div class="row">
          <div class="col-sm-12 col-md-12 col-lg-12">
            <h1 class="pagetitle__heading">About SALi</h1>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">About SALi</li>
              </ol>
            </nav>
          </div><!-- /.col-lg-12 -->
        </div><!-- /.row -->
      </div><!-- /.container -->
    </section><!-- /.page-title -->

    <!-- ==========================
        Founder Content
    =========================== -->
    <section class="about-layout2 pb-0">
      <div class="container">
        <div class="row">
          <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="heading-layout2">
              <h3 class="heading__title mb-40">About South Asian Liver Institute</h3>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="about__text bg-white">
              <p class="heading__desc mb-30">Think Liver. Think SALi. Because life depends on it.</p>
              <p class="heading__desc mb-30">South Asian Liver Institute (SALi) is a premier healthcare facility dedicated to providing world-class liver care and treatment. Our team of expert hepatologists, transplant surgeons, and healthcare professionals are committed to delivering compassionate, evidence-based care to patients with liver diseases.</p>
              <p class="heading__desc mb-30">With state-of-the-art facilities across multiple locations in India, we offer comprehensive services ranging from liver transplantation to advanced interventional treatments, ensuring that every patient receives personalized care tailored to their specific needs.</p>
            </div>
          </div>
        </div>
      </div>
    </section>
</BaseLayout>
