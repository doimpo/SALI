---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';

const title = "Contact Us | South Asian Liver Institute";
const description = "Get in touch with SALi for liver care inquiries, appointments, and medical assistance. Available 24/7 for emergency consultations.";
const keywords = "contact SALi, liver care inquiry, appointment booking, medical consultation, emergency liver care, hepatology consultation";
---

<BaseLayout title={title} description={description} keywords={keywords}>
  <!-- Page Title -->
  <section class="page-title page-title-layout1 bg-overlay bg-parallax text-center">
    <div class="bg-img"><img src="/assets/images/page-titles/2.jpg" alt="Contact Us"></div>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
          <h1 class="pagetitle__heading">Contact Us</h1>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">Contact</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Info -->
  <section class="contact-info contact-info-layout1 pt-130">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
          <div class="heading text-center mb-50">
            <h2 class="heading__subtitle">Get In Touch With Us</h2>
            <h3 class="heading__title">We're Here to Help with Your Liver Care Needs</h3>
          </div>
        </div>
      </div>
      <div class="row">
        <!-- Contact Box 1 -->
        <div class="col-sm-12 col-md-4 col-lg-4">
          <div class="contact-info-box">
            <div class="contact__icon">
              <i class="icon-phone"></i>
            </div>
            <h4 class="contact__title">Emergency Line</h4>
            <p class="contact__desc">Available 24/7 for urgent medical needs</p>
            <a href="tel:+918070670670" class="phone__number">
              <i class="icon-phone"></i> <span>+91-8070 670 670</span>
            </a>
          </div>
        </div>

        <!-- Contact Box 2 -->
        <div class="col-sm-12 col-md-4 col-lg-4">
          <div class="contact-info-box">
            <div class="contact__icon">
              <i class="icon-email"></i>
            </div>
            <h4 class="contact__title">Email Address</h4>
            <p class="contact__desc">Send us your medical inquiries</p>
            <a href="mailto:info@southasianliverinstitute.com" class="email__address">
              info@southasianliverinstitute.com
            </a>
            <a href="mailto:clinic@southasianliverinstitute.com" class="email__address">
              clinic@southasianliverinstitute.com
            </a>
          </div>
        </div>

        <!-- Contact Box 3 -->
        <div class="col-sm-12 col-md-4 col-lg-4">
          <div class="contact-info-box">
            <div class="contact__icon">
              <i class="icon-location"></i>
            </div>
            <h4 class="contact__title">Location</h4>
            <p class="contact__desc">Visit our main clinic</p>
            <p class="contact__address">
              Plot No. 8-2-269/4/B, 4th Floor<br>
              Road No. 2, Banjara Hills<br>
              Hyderabad, Telangana 500034<br>
              India
            </p>
            <a href="https://maps.google.com/maps?q=Plot+No.+8-2-269/4/B,+4th+Floor,+Road+No.+2,+Banjara+Hills,+Hyderabad,+Telangana+500034,+India" target="_blank" class="btn btn__link btn__primary">
              <i class="icon-arrow-right"></i> <span>Get Directions</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="contact-layout1 pt-0 pb-90">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-6">
          <div class="heading mb-30">
            <h2 class="heading__subtitle">Send Us a Message</h2>
            <h3 class="heading__title">Have Questions? We're Here to Help</h3>
            <p class="heading__desc">Fill out the form below and our team will get back to you as soon as possible. For urgent medical matters, please call our emergency line.</p>
          </div>
          
          <ContactForm />
        </div>

        <div class="col-sm-12 col-md-12 col-lg-6">
          <!-- Map -->
          <div class="map-container mb-40">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3806.7654676892633!2d78.44189631487774!3d17.424251388052686!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bcb90c5c5555555%3A0x5555555555555555!2sBanjara%20Hills%2C%20Hyderabad%2C%20Telangana!5e0!3m2!1sen!2sin!4v1234567890123!5m2!1sen!2sin" 
              width="100%" 
              height="400" 
              style="border:0; border-radius: 8px;" 
              allowfullscreen="" 
              loading="lazy" 
              referrerpolicy="no-referrer-when-downgrade">
            </iframe>
          </div>

          <!-- Additional Information -->
          <div class="contact-additional-info bg-light p-40" style="border-radius: 8px;">
            <h4 class="mb-30">Office Hours</h4>
            <ul class="list-unstyled mb-30">
              <li class="mb-10"><strong>Monday - Friday:</strong> 8:00 AM - 7:00 PM</li>
              <li class="mb-10"><strong>Saturday:</strong> 9:00 AM - 5:00 PM</li>
              <li class="mb-10"><strong>Sunday:</strong> 10:00 AM - 2:00 PM</li>
              <li class="mb-10"><strong>Emergency Services:</strong> 24/7</li>
            </ul>

            <h4 class="mb-30">Other Locations</h4>
            <ul class="list-unstyled">
              <li class="mb-10"><a href="/locations/mumbai">Mumbai</a></li>
              <li class="mb-10"><a href="/locations/kolkata">Kolkata</a></li>
              <li class="mb-10"><a href="/locations/nagpur">Nagpur</a></li>
              <li class="mb-10"><a href="/locations/visakhapatnam">Visakhapatnam</a></li>
              <li><a href="/locations/hyderabad">View All Locations</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-layout1 pb-90 bg-gray">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
          <div class="heading text-center mb-50">
            <h3 class="heading__title">Frequently Asked Questions</h3>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
          <div class="faq-item">
            <h5 class="faq__title">How do I book an appointment?</h5>
            <p class="faq__desc">You can book an appointment by calling our emergency line at +91-8070 670 670, using our <a href="/appointment">online booking form</a>, or visiting any of our locations directly.</p>
          </div>
          <div class="faq-item">
            <h5 class="faq__title">Do you accept insurance?</h5>
            <p class="faq__desc">Yes, we work with most major insurance providers. Please contact our billing department or visit with your insurance card for specific coverage details.</p>
          </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6">
          <div class="faq-item">
            <h5 class="faq__title">What should I bring to my first appointment?</h5>
            <p class="faq__desc">Please bring a valid ID, insurance card, list of current medications, previous medical records if available, and any test results related to your liver condition.</p>
          </div>
          <div class="faq-item">
            <h5 class="faq__title">Do you provide second opinions?</h5>
            <p class="faq__desc">Yes, we provide comprehensive second opinions for liver conditions and treatment plans. Please bring all relevant medical records and imaging studies.</p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12 text-center mt-30">
          <a href="/faqs" class="btn btn__primary btn__rounded">
            <span>View All FAQs</span>
            <i class="icon-arrow-right"></i>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-info-box {
    text-align: center;
    padding: 40px 20px;
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 0 30px rgba(0,0,0,0.08);
    margin-bottom: 30px;
    transition: all 0.3s ease;
  }
  
  .contact-info-box:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 40px rgba(0,0,0,0.15);
  }
  
  .contact__icon {
    font-size: 60px;
    color: #D1A648;
    margin-bottom: 20px;
  }
  
  .contact__title {
    font-size: 24px;
    font-weight: 700;
    color: #22336B;
    margin-bottom: 15px;
  }
  
  .contact__desc {
    color: #666;
    margin-bottom: 20px;
  }
  
  .phone__number, .email__address {
    display: block;
    color: #22336B;
    font-weight: 600;
    text-decoration: none;
    margin-bottom: 10px;
  }
  
  .phone__number:hover, .email__address:hover {
    color: #D1A648;
  }
  
  .contact__address {
    color: #666;
    line-height: 1.8;
  }
  
  .faq-item {
    background: #fff;
    padding: 30px;
    border-radius: 8px;
    margin-bottom: 20px;
    box-shadow: 0 0 20px rgba(0,0,0,0.05);
  }
  
  .faq__title {
    font-size: 18px;
    font-weight: 700;
    color: #22336B;
    margin-bottom: 15px;
  }
  
  .faq__desc {
    color: #666;
    line-height: 1.8;
  }
  
  .faq__desc a {
    color: #D1A648;
    text-decoration: none;
  }
  
  .faq__desc a:hover {
    text-decoration: underline;
  }
</style>

