---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Gallery | South Asian Liver Institute";
const description = "Explore SALi's state-of-the-art facilities, advanced medical equipment, and our team of liver specialists through our photo gallery.";
const keywords = "SALi gallery, liver hospital photos, medical facilities, liver transplant center, hepatology clinic, medical equipment";
---

<BaseLayout title={title} description={description} keywords={keywords}>
  <!-- Page Title -->
  <section class="page-title page-title-layout1 bg-overlay bg-parallax text-center">
    <div class="bg-img"><img src="/assets/images/page-titles/4.jpg" alt="Gallery"></div>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
          <h1 class="pagetitle__heading">Our Gallery</h1>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">Gallery</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery Introduction -->
  <section class="gallery-intro pt-130 pb-60">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-8 offset-lg-2">
          <div class="heading text-center mb-50">
            <h2 class="heading__subtitle">Explore Our Facilities</h2>
            <h3 class="heading__title">World-Class Liver Care Infrastructure</h3>
            <p class="heading__desc">Take a virtual tour of our state-of-the-art medical facilities, advanced equipment, and the dedicated team that makes SALi India's premier liver care institute.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery Filters -->
  <section class="gallery-section pb-90">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="gallery-filter text-center mb-50">
            <button class="filter-btn active" data-filter="all">All</button>
            <button class="filter-btn" data-filter="facilities">Facilities</button>
            <button class="filter-btn" data-filter="equipment">Equipment</button>
            <button class="filter-btn" data-filter="team">Our Team</button>
            <button class="filter-btn" data-filter="events">Events</button>
          </div>
        </div>
      </div>

      <!-- Gallery Grid -->
      <div class="row gallery-grid">
        <!-- Facility Images -->
        <div class="col-sm-12 col-md-6 col-lg-4 gallery-item" data-category="facilities">
          <div class="gallery-img">
            <a class="popup-gallery-item" href="/assets/images/gallery/1.jpg">
              <img src="/assets/images/gallery/1.jpg" alt="SALi Hospital Entrance" loading="lazy">
              <div class="gallery-overlay">
                <div class="gallery-content">
                  <h5>Hospital Entrance</h5>
                  <p>Modern facility entrance</p>
                </div>
              </div>
            </a>
          </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4 gallery-item" data-category="facilities">
          <div class="gallery-img">
            <a class="popup-gallery-item" href="/assets/images/gallery/2.jpg">
              <img src="/assets/images/gallery/2.jpg" alt="Reception Area" loading="lazy">
              <div class="gallery-overlay">
                <div class="gallery-content">
                  <h5>Reception Area</h5>
                  <p>Welcoming patient reception</p>
                </div>
              </div>
            </a>
          </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4 gallery-item" data-category="facilities">
          <div class="gallery-img">
            <a class="popup-gallery-item" href="/assets/images/gallery/3.jpg">
              <img src="/assets/images/gallery/3.jpg" alt="Waiting Area" loading="lazy">
              <div class="gallery-overlay">
                <div class="gallery-content">
                  <h5>Waiting Area</h5>
                  <p>Comfortable patient waiting area</p>
                </div>
              </div>
            </a>
          </div>
        </div>

        <!-- Equipment Images -->
        <div class="col-sm-12 col-md-6 col-lg-4 gallery-item" data-category="equipment">
          <div class="gallery-img">
            <a class="popup-gallery-item" href="/assets/images/gallery/4.jpg">
              <img src="/assets/images/gallery/4.jpg" alt="Operating Theater" loading="lazy">
              <div class="gallery-overlay">
                <div class="gallery-content">
                  <h5>Operating Theater</h5>
                  <p>State-of-the-art surgical facility</p>
                </div>
              </div>
            </a>
          </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4 gallery-item" data-category="equipment">
          <div class="gallery-img">
            <a class="popup-gallery-item" href="/assets/images/gallery/5.jpg">
              <img src="/assets/images/gallery/5.jpg" alt="Advanced Medical Equipment" loading="lazy">
              <div class="gallery-overlay">
                <div class="gallery-content">
                  <h5>Advanced Equipment</h5>
                  <p>Latest diagnostic technology</p>
                </div>
              </div>
            </a>
          </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4 gallery-item" data-category="equipment">
          <div class="gallery-img">
            <a class="popup-gallery-item" href="/assets/images/gallery/6.jpg">
              <img src="/assets/images/gallery/6.jpg" alt="ICU Facility" loading="lazy">
              <div class="gallery-overlay">
                <div class="gallery-content">
                  <h5>ICU Facility</h5>
                  <p>Advanced intensive care unit</p>
                </div>
              </div>
            </a>
          </div>
        </div>

        <!-- Team Images -->
        <div class="col-sm-12 col-md-6 col-lg-4 gallery-item" data-category="team">
          <div class="gallery-img">
            <a class="popup-gallery-item" href="/assets/images/team/1.jpg">
              <img src="/assets/images/team/1.jpg" alt="Medical Team" loading="lazy">
              <div class="gallery-overlay">
                <div class="gallery-content">
                  <h5>Our Medical Team</h5>
                  <p>Expert liver specialists</p>
                </div>
              </div>
            </a>
          </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4 gallery-item" data-category="team">
          <div class="gallery-img">
            <a class="popup-gallery-item" href="/assets/images/team/2.jpg">
              <img src="/assets/images/team/2.jpg" alt="Surgical Team" loading="lazy">
              <div class="gallery-overlay">
                <div class="gallery-content">
                  <h5>Surgical Team</h5>
                  <p>Experienced surgeons</p>
                </div>
              </div>
            </a>
          </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4 gallery-item" data-category="team">
          <div class="gallery-img">
            <a class="popup-gallery-item" href="/assets/images/team/3.jpg">
              <img src="/assets/images/team/3.jpg" alt="Nursing Staff" loading="lazy">
              <div class="gallery-overlay">
                <div class="gallery-content">
                  <h5>Nursing Staff</h5>
                  <p>Dedicated healthcare professionals</p>
                </div>
              </div>
            </a>
          </div>
        </div>

        <!-- Events Images -->
        <div class="col-sm-12 col-md-6 col-lg-4 gallery-item" data-category="events">
          <div class="gallery-img">
            <a class="popup-gallery-item" href="/assets/images/services/1.jpg">
              <img src="/assets/images/services/1.jpg" alt="Health Camp" loading="lazy">
              <div class="gallery-overlay">
                <div class="gallery-content">
                  <h5>Health Camp</h5>
                  <p>Community outreach program</p>
                </div>
              </div>
            </a>
          </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4 gallery-item" data-category="events">
          <div class="gallery-img">
            <a class="popup-gallery-item" href="/assets/images/services/2.jpg">
              <img src="/assets/images/services/2.jpg" alt="Medical Conference" loading="lazy">
              <div class="gallery-overlay">
                <div class="gallery-content">
                  <h5>Medical Conference</h5>
                  <p>Liver health awareness event</p>
                </div>
              </div>
            </a>
          </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4 gallery-item" data-category="events">
          <div class="gallery-img">
            <a class="popup-gallery-item" href="/assets/images/services/3.jpg">
              <img src="/assets/images/services/3.jpg" alt="Patient Education" loading="lazy">
              <div class="gallery-overlay">
                <div class="gallery-content">
                  <h5>Patient Education</h5>
                  <p>Educational workshop</p>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="cta-section pb-90 bg-gray">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-8 offset-lg-2">
          <div class="cta-content text-center">
            <h3 class="cta__title mb-30">Visit Our Facilities</h3>
            <p class="cta__desc mb-40">Experience world-class liver care in person. Schedule a visit to our facilities or book an appointment with our specialists today.</p>
            <div class="cta__actions">
              <a href="/appointment" class="btn btn__primary btn__rounded mr-20 mb-20">
                <i class="icon-calendar"></i>
                <span>Book Appointment</span>
              </a>
              <a href="/locations/hyderabad" class="btn btn__secondary btn__rounded mb-20">
                <i class="icon-location"></i>
                <span>Find Location</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .gallery-filter {
    margin-bottom: 50px;
  }
  
  .filter-btn {
    padding: 12px 30px;
    margin: 0 10px 10px;
    background: #fff;
    border: 2px solid #e0e0e0;
    border-radius: 50px;
    color: #22336B;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .filter-btn:hover,
  .filter-btn.active {
    background: #22336B;
    color: #fff;
    border-color: #22336B;
  }
  
  .gallery-item {
    margin-bottom: 30px;
  }
  
  .gallery-img {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    box-shadow: 0 0 30px rgba(0,0,0,0.1);
  }
  
  .gallery-img img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .gallery-img:hover img {
    transform: scale(1.1);
  }
  
  .gallery-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(34, 51, 107, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .gallery-img:hover .gallery-overlay {
    opacity: 1;
  }
  
  .gallery-content {
    text-align: center;
    color: #fff;
    padding: 20px;
  }
  
  .gallery-content h5 {
    font-size: 20px;
    font-weight: 700;
    margin-bottom: 10px;
    color: #fff;
  }
  
  .gallery-content p {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.9);
  }
  
  .cta-content {
    padding: 60px 40px;
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 0 40px rgba(0,0,0,0.08);
  }
  
  .cta__title {
    font-size: 36px;
    font-weight: 700;
    color: #22336B;
  }
  
  .cta__desc {
    font-size: 18px;
    color: #666;
    line-height: 1.8;
  }
</style>

<script is:inline>
  // Gallery filter functionality
  document.addEventListener('DOMContentLoaded', function() {
    const filterBtns = document.querySelectorAll('.filter-btn');
    const galleryItems = document.querySelectorAll('.gallery-item');
    
    filterBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        // Remove active class from all buttons
        filterBtns.forEach(b => b.classList.remove('active'));
        // Add active class to clicked button
        this.classList.add('active');
        
        const filter = this.getAttribute('data-filter');
        
        galleryItems.forEach(item => {
          if (filter === 'all' || item.getAttribute('data-category') === filter) {
            item.style.display = 'block';
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
  });
</script>

