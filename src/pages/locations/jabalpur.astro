---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AppointmentForm from '../../components/AppointmentForm.astro';
---
<BaseLayout 
  title="SALi Jabalpur - Liver Care Center | South Asian Liver Institute"
  description="South Asian Liver Institute in Jabalpur. Expert hepatology services and liver disease treatment in Madhya Pradesh."
  keywords="liver treatment Jabalpur, hepatology Jabalpur, liver hospital Jabalpur, SALi Jabalpur, liver care Madhya Pradesh"
  image="/assets/images/page-titles/6.jpg"
>
    <section class="page-title page-title-layout2 bg-overlay text-center pb-0">
        <div class="bg-img"><img src="/assets/images/page-titles/6.jpg" alt="SALi Jabalpur" loading="lazy" width="1920" height="400"></div>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-8 offset-xl-2">
                    <div class="pagetitle__icon"><i class="icon-location"></i></div>
                    <h1 class="pagetitle__heading">SALi Jabalpur</h1>
                    <p class="pagetitle__desc mb-30">Quality liver care in Madhya Pradesh</p>
                    <a href="#content" class="scroll-down"><i class="fas fa-long-arrow-alt-down"></i></a>
                </div>
            </div>
        </div>
    </section>

    <section id="content" class="pb-80">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-7">
                    <div class="text-block mb-50">
                        <h2 class="text-block__title mb-30">Comprehensive Liver Care in Jabalpur</h2>
                        <p class="text-block__desc mb-20 font-weight-bold color-secondary">Expert Hepatology Services</p>
                        <img src="/assets/images/services/1.jpg" alt="SALi Jabalpur" class="w-100 mb-30" loading="lazy" width="800" height="450">
                        <p class="text-block__desc mb-20">
                            SALi Jabalpur provides comprehensive liver care to patients in Madhya Pradesh. Our center offers expert hepatology consultations, advanced diagnostics, and comprehensive management of all liver diseases.
                        </p>
                        <h3 class="text-block__title mb-20">Services Offered</h3>
                        <ul class="list-items list-unstyled mb-40 pl-40">
                            <li>Hepatology consultations</li>
                            <li>Liver cirrhosis care</li>
                            <li>Fatty liver management</li>
                            <li>Hepatitis B and C treatment</li>
                            <li>Liver cancer screening</li>
                            <li>Transplant evaluation and coordination</li>
                            <li>Nutritional counseling</li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-5">
                    <aside class="sidebar has-marign-left sticky-top">
                        <div class="widget widget-contact">
                            <div class="widget-content">
                                <div class="widget__icon"><i class="icon-location"></i></div>
                                <h4 class="widget__title">Contact Information</h4>
                                <p class="widget__desc mb-20"><strong>Phone:</strong><br><a href="tel:+918070670670">+91-8070 670 670</a></p>
                            </div>
                        </div>
                        <div class="widget widget-help bg-overlay bg-overlay-secondary-gradient">
                            <div class="bg-img"><img src="/assets/images/banners/5.jpg" alt="Contact" loading="lazy" width="400" height="300"></div>
                            <div class="widget-content">
                                <div class="widget__icon"><i class="icon-call3"></i></div>
                                <h4 class="widget__title">Book Appointment</h4>
                                <a href="tel:+918070670670" class="phone__number"><i class="icon-phone"></i> <span>+91-8070 670 670</span></a>
                            </div>
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </section>

    <!-- ==========================
        Appointment Form Section
    =========================== -->
    <section class="contact-layout1 pt-60 pb-80 bg-gray">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-40">
                    <h2 class="heading__title">Book an Appointment at SALi Jabalpur</h2>
                    <p class="heading__desc">Schedule your consultation with our expert liver specialists</p>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-sm-12 col-md-10 col-lg-8">
                    <AppointmentForm 
                        location="jabalpur"
                        formTitle="Request an Appointment"
                        formDescription="Our team at Jabalpur will contact you within 24 hours to confirm your appointment."
                        showClinicSelector={false}
                        showDoctorSelector={true}
                    />
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
