---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AppointmentForm from '../../components/AppointmentForm.astro';
---
<BaseLayout 
  title="SALi Khammam - Liver Hospital | South Asian Liver Institute"
  description="South Asian Liver Institute in Khammam. Expert hepatology and liver care services in Telangana."
  keywords="liver treatment Khammam, hepatology Khammam, liver hospital Khammam, SALi Khammam, liver care Telangana"
  image="/assets/images/page-titles/3.jpg"
>
    <section class="page-title page-title-layout2 bg-overlay text-center pb-0">
        <div class="bg-img"><img src="/assets/images/page-titles/3.jpg" alt="SALi Khammam" loading="lazy" width="1920" height="400"></div>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-8 offset-xl-2">
                    <div class="pagetitle__icon"><i class="icon-location"></i></div>
                    <h1 class="pagetitle__heading">SALi Khammam</h1>
                    <p class="pagetitle__desc mb-30">Expert liver care in Khammam district</p>
                    <a href="#content" class="scroll-down"><i class="fas fa-long-arrow-alt-down"></i></a>
                </div>
            </div>
        </div>
    </section>

    <section id="content" class="pb-80">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-7">
                    <div class="text-block mb-50">
                        <h2 class="text-block__title mb-30">Comprehensive Liver Care in Khammam</h2>
                        <p class="text-block__desc mb-20 font-weight-bold color-secondary">Quality Hepatology Services</p>
                        <img src="/assets/images/services/6.jpg" alt="SALi Khammam" class="w-100 mb-30" loading="lazy" width="800" height="450">
                        <p class="text-block__desc mb-20">
                            SALi Khammam offers comprehensive hepatology services to patients in Khammam district and surrounding areas. Our experienced team provides expert liver care, disease management, and coordinates with our main center for advanced treatments.
                        </p>
                        <h3 class="text-block__title mb-20">Services</h3>
                        <ul class="list-items list-unstyled mb-40 pl-40">
                            <li>Liver disease consultations</li>
                            <li>Cirrhosis management</li>
                            <li>Fatty liver treatment</li>
                            <li>Hepatitis care</li>
                            <li>Transplant evaluation</li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-5">
                    <aside class="sidebar has-marign-left sticky-top">
                        <div class="widget widget-contact">
                            <div class="widget-content">
                                <div class="widget__icon"><i class="icon-location"></i></div>
                                <h4 class="widget__title">Contact</h4>
                                <p class="widget__desc mb-20"><strong>Phone:</strong><br><a href="tel:+918070670670">+91-8070 670 670</a></p>
                            </div>
                        </div>
                        <div class="widget widget-help bg-overlay bg-overlay-secondary-gradient">
                            <div class="bg-img"><img src="/assets/images/banners/5.jpg" alt="Contact" loading="lazy" width="400" height="300"></div>
                            <div class="widget-content">
                                <div class="widget__icon"><i class="icon-call3"></i></div>
                                <h4 class="widget__title">Book Now</h4>
                                <a href="tel:+918070670670" class="phone__number"><i class="icon-phone"></i> <span>+91-8070 670 670</span></a>
                            </div>
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </section>

    <!-- ==========================
        Appointment Form Section
    =========================== -->
    <section class="contact-layout1 pt-60 pb-80 bg-gray">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-40">
                    <h2 class="heading__title">Book an Appointment at SALi Khammam</h2>
                    <p class="heading__desc">Schedule your consultation with our expert liver specialists</p>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-sm-12 col-md-10 col-lg-8">
                    <AppointmentForm 
                        location="khammam"
                        formTitle="Request an Appointment"
                        formDescription="Our team at Khammam will contact you within 24 hours to confirm your appointment."
                        showClinicSelector={false}
                        showDoctorSelector={true}
                    />
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
