---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AppointmentForm from '../../components/AppointmentForm.astro';
---
<BaseLayout 
  title="SALi Rajkot - Liver Hospital | South Asian Liver Institute"
  description="South Asian Liver Institute in Rajkot. Expert liver care and hepatology services in Gujarat."
  keywords="liver treatment Rajkot, hepatology Rajkot, liver hospital Gujarat, SALi Rajkot, liver care Saurashtra"
  image="/assets/images/page-titles/5.jpg"
>
    <section class="page-title page-title-layout2 bg-overlay text-center pb-0">
        <div class="bg-img"><img src="/assets/images/page-titles/5.jpg" alt="SALi Rajkot" loading="lazy" width="1920" height="400"></div>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-8 offset-xl-2">
                    <div class="pagetitle__icon"><i class="icon-location"></i></div>
                    <h1 class="pagetitle__heading">SALi Rajkot</h1>
                    <p class="pagetitle__desc mb-30">Premier liver care in Gujarat</p>
                    <a href="#content" class="scroll-down"><i class="fas fa-long-arrow-alt-down"></i></a>
                </div>
            </div>
        </div>
    </section>

    <section id="content" class="pb-80">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-8">
                    <div class="text-block mb-50">
                        <h2 class="text-block__title mb-30">Liver Care Services in Rajkot</h2>
                        <p class="text-block__desc mb-20 font-weight-bold color-secondary">Serving Gujarat and Saurashtra</p>
                        <img src="/assets/images/services/8.jpg" alt="SALi Rajkot" class="w-100 mb-30" loading="lazy" width="800" height="450">
                        <p class="text-block__desc mb-20">
                            SALi Rajkot brings expert liver care to Gujarat. Our center provides comprehensive hepatology services, liver disease management, and coordinates with our network for advanced treatments and transplant care.
                        </p>
                        <h3 class="text-block__title mb-20">Services</h3>
                        <ul class="list-items list-unstyled mb-40 pl-40">
                            <li>Comprehensive hepatology consultations</li>
                            <li>Liver disease diagnosis and treatment</li>
                            <li>Cirrhosis management</li>
                            <li>Fatty liver programs</li>
                            <li>Hepatitis treatment</li>
                            <li>Pre and post-transplant care</li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-4">
                    <aside class="sidebar has-marign-left sticky-top">
                        <div class="widget widget-contact">
                            <div class="widget-content">
                                <div class="widget__icon"><i class="icon-location"></i></div>
                                <h4 class="widget__title">Contact</h4>
                                <p class="widget__desc mb-20"><strong>Phone:</strong><br><a href="tel:+918070670670">+91-8070 670 670</a></p>
                            </div>
                        </div>
                        <div class="widget widget-help bg-overlay bg-overlay-secondary-gradient">
                            <div class="bg-img"><img src="/assets/images/banners/5.jpg" alt="Contact" loading="lazy" width="400" height="300"></div>
                            <div class="widget-content">
                                <div class="widget__icon"><i class="icon-call3"></i></div>
                                <h4 class="widget__title">Book Consultation</h4>
                                <a href="tel:+918070670670" class="phone__number"><i class="icon-phone"></i> <span>+91-8070 670 670</span></a>
                            </div>
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </section>

    <!-- ==========================
        Appointment Form Section
    =========================== -->
    <section class="contact-layout1 pt-60 pb-80 bg-gray">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-40">
                    <h2 class="heading__title">Book an Appointment at SALi Rajkot</h2>
                    <p class="heading__desc">Schedule your consultation with our expert liver specialists</p>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-sm-12 col-md-10 col-lg-8">
                    <AppointmentForm 
                        location="rajkot"
                        formTitle="Request an Appointment"
                        formDescription="Our team at Rajkot will contact you within 24 hours to confirm your appointment."
                        showClinicSelector={false}
                        showDoctorSelector={true}
                    />
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
