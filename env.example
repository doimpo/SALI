# ===================================
# SALi Website Environment Variables
# ===================================
# Copy this file to .env and fill in your actual values

# ===================================
# PUBLIC VARIABLES (Exposed to Client)
# ===================================

# Google Analytics
PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
# Get your tracking ID from Google Analytics 4

# Site Configuration
PUBLIC_SITE_URL=https://southasianliverinstitute.netlify.app
# Your production site URL

# Google reCAPTCHA v3 (Public Site Key)
PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key-here
# Get your site key from Google reCAPTCHA Admin Console

# ===================================
# PRIVATE VARIABLES (Server-side Only)
# ===================================

# Google reCAPTCHA v3 (Secret Key)
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key-here
# Get your secret key from Google reCAPTCHA Admin Console

# OpenAI API for AI Tagging and Translations
OPENAI_API_KEY=your-openai-api-key-here
# Get your API key from OpenAI Platform
# This key is used for both AI tagging and automated translations

# Email Configuration
NOTIFICATION_EMAIL=info@southasianliverinstitute.com
# Email address to receive form submissions

# Netlify Forms API (for admin dashboard)
NETLIFY_FORM_API_KEY=your-netlify-api-key-here
NETLIFY_SITE_ID=your-netlify-site-id-here
# Get these from Netlify dashboard under Settings > API

# Optional: Custom SMTP (if not using Netlify's built-in)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key
# Configure these if using external email service like SendGrid

# Admin Dashboard Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password
# Change the default password immediately

# Spam Protection Thresholds
RECAPTCHA_THRESHOLD=0.5
MAX_SUBMISSIONS_PER_IP_PER_HOUR=5
# Adjust based on expected traffic

# ===================================
# TRANSLATION CONFIGURATION
# ===================================
# Manual translation overrides can be placed in translations/[lang]/[page].json files
# Supported languages: en, hi, te, ta, bn, mr
# Example: translations/hi/about/about-us.json

# ===================================
# NODE ENVIRONMENT
# ===================================
NODE_ENV=production
# Set to 'development' for local development

